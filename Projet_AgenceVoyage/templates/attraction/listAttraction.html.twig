{% extends 'accueil/base-back.html.twig' %}
{% block body %}

    <title> TapToTrip | Liste des Attractions  </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <!-- css -->
    <link rel="stylesheet" href="{{ asset ('Back/css/styleList.css') }}">

</head>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Liste des <b>Attractions</b></h2>
                    </div>

                <div class="col-sm-6">
                    <a href="{{ path ('addAttraction') }}" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Nouvelle Attraction</span></a>
                    </div>
                </div>
            </div>

            <!-- Tables des attractions -->
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Lieu</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                </tr>
                {% for attraction in tabAttr %}
                    <tr>
                        <td>{{ attraction.id }}</td>
                        <td>{{ attraction.nom }}</td>
                        <td>{{ attraction.lieu }}</td>
                        <td>{{ attraction.description}}</td>
                        <td><img src="{{ asset ('upload/img/' ~ attraction.image) }}" alt="Image" style="width: 60px ; height: 60px"></td>
                        <td>
                            <a href="{{ path('updateAttraction',{'id':attraction.id}) }}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="{{ path('removeAttraction',{'id':attraction.id}) }}" class="delete" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>


        </div>
    </div>
</div>

</body>

</html>
{% endblock %}
