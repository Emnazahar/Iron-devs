
{% extends 'base.html.twig' %}

{% block title %}Hello BilletController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a href="{{ 'C:/wamp64/www/Pidev1/src/Controller/BilletController.php'|file_link(0) }}">src/Controller/BilletController.php</a></code></li>
            <li>Your template at <code><a href="{{ 'C:/wamp64/www/Pidev1/templates/billet/index.html.twig'|file_link(0) }}">templates/billet/index.html.twig</a></code></li>
        </ul>
    </div>

    <div class="example-wrapper">
        <h1>Symfony QR-Code ✅</h1> <hr>

        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Recherche'}}) }}
                <hr>
                <button type="submit" class="btn btn-success btn-block">Recherche</button>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6">
                {% if qrCode %}
                    <img src="{{ qrCode }}" alt="qr-code">
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}